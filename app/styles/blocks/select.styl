.selects
    flex()
    position relative
    pointer-events none
    z-index 5
    margin-right: 10px

.select
    margin 2px 0
    margin-right 10px
    background-color #f0f0f0
    width 200px
    border-radius 5px
    position relative
    height 40px
    cursor pointer
    pointer-events all
    t()
    &:hover
        background-color #ff908b
    &.active
        background-color #ff908b
        img
            transform rotate(180deg)
        ul
            opacity 1
            pointer-events all

    &__selected
        font-size 14px
        height 100%
        padding 0 15px
        display flex
        align-items center
        justify-content space-between
        pointer-events none
        img
            max-width 16px
            t()

    ul
        position absolute
        border-radius 5px
        overflow hidden
        top 45px
        left 0
        right 0
        opacity 0
        pointer-events none
        t()

        li
            width 100%
            height 40px
            display flex
            align-items center
            padding 0 15px
            font-size 14px
            background-color #f0f0f0
            border-bottom 1px solid #eaeaea
            cursor pointer
            t()
            &:last-child
                border-bottom 0

            &:hover
                background-color #ff908b