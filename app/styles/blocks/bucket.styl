.bucket
    opacity 0
    pointer-events none
    position absolute
    top 60px
    right 0
    width 300px
    border-radius 5px
    background-color #f0f0f0
    box-shadow 0 0 10px #cccccc
    transform translateX(15px)
    z-index 5
    t()
    +to-width(340px)
        width 280px

    &-item
        padding 10px
        padding-right 25px
        width 100%
        border-bottom 1px solid #e1e1e1
        position relative
        display flex
        align-items center

        &__image
            width 100%
            max-width 60px
            height 60px
            margin-right 10px
            background-size cover
            background-position top center

        &__title
            font-size 12px
            font-weight 700
            line-height 14px
            padding-bottom 5px

        &__delete
            position absolute
            top 10px
            right 10px
            opacity 0.4
            cursor pointer
            pointer-events all
            t()
            img
                width 12px
                pointer-events none
            
            &:hover
                opacity 1
        
        &__count
            font-size 12px
            color #555

    &-footer
        padding 20px 10px
        flex()
        align-items center
        justify-content space-between

        &__title
            font-size 16px
        
        &__price
            font-size 20px
            color #44af80
    
    &__empty
        font-size 14px
        text-align center
        margin 30px