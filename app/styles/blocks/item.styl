.item
    padding 10px
    width 33.333%
    animation fadeIn 0.3s linear
    +to-width(920px)
        width 50%
    +to-width(640px)
        width 100%

    &__header
        width auto
        margin-left -24px
        margin-right -24px
        margin-top -24px
        height 250px
        background-size cover
        background-position top center
    
    &__title
        font-size 22px
        margin-top 25px
        text-transform uppercase
        font-weight 700
    
    &__desc
        font-size 12px
        line-height 18px
        margin-top 10px
        color #555
    
    &-container
        border 1px solid #f0f0f0
        background-color #f9f9f9
        border-radius 10px
        overflow hidden
        position relative
        padding 24px
        padding-bottom 70px
        width 100%
        height 100%

    &__avaible
        font-size 14px
        margin 5px 0
        color white
        background #ff908b
        position absolute
        top 10px
        left 10px
        padding 7px 15px
        border-radius 50px
    
    &-wrap
        display flex
        align-items center
        justify-content space-between
        margin-top 15px
        position absolute
        bottom 24px
        left 24px
        right 24px
    
    &-price
        color #44af80
        font-size 20px
    
    &-button
        padding 10px 20px
        border-radius 50px
        background-color #ff908b
        color white
        font-size 12px
        cursor pointer
        t()
        
        &:hover
            background-color #fe847f

        &:active
            background-color #f37c76
        
        &.active
            background-color #f37c76

@keyframes fadeIn {
    from {
        opacity 0
    } to {
        opacity 1
    }
}